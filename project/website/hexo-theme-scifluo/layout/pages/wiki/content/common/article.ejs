<article class="card <%- page.toc !== false ? "xl:w-4/6" : "xl:w-5/6"; %> p-5 space-y-3 max-sm:rounded-none" aria-labelledby="article-title" aria-describedby="article-description">
	<% if (page.head !== false) { %>
	<div class="border-b pb-2 text-center border-slate-400">
		<h1 class="text-4xl"><%- page.title %></h1>
		<% if (page.description) { %>
		<p><%- page.description %></p>
		<% } %>
	</div>
	<% } %>
	<div id="wiki-content">
		<%- page.content %>
	</div>
	<% if (page.giscus !== false) { %>
	<div id="giscus-widget"></div>
	<% } %>
</article>
